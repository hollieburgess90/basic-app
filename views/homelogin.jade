extends layout

block content
  h1= "Home Page"
  .row
    .span4.offset2
      form(action='/',method='post').form-horizontal
        .control-group
          label.control-label(for='inputEmail') Email
          .controls
            input#inputEmail(type='text', placeholder='Email', name='Email')
        .control-group
          label.control-label(for='inputPassword') Password
          .controls
            input#inputPassword(type='password', placeholder='Password', name='Password')
        .control-group
          .controls
            label.checkbox
              input(type='checkbox')
              | Remember me
            button.btn(type='submit') Sign In



